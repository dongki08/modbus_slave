<Window x:Class="modbus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Modbus TCP Slave Simulator" Height="600" Width="1050">
    <Window.Resources>
        <!-- 모던 버튼 스타일 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0, 2, 10, 2"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="#20000000" BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton2" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0, 2, 8, 2"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="6" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="#20000000" BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton3" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                 CornerRadius="6" 
                 BorderThickness="{TemplateBinding BorderThickness}" 
                 BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="#20000000" BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 토글 버튼 스타일 -->
        <Style x:Key="ToggleButton" TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="Padding" Value="6,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 활성 토글 버튼 스타일 -->
        <Style x:Key="ActiveToggleButton" TargetType="Button" BasedOn="{StaticResource ToggleButton}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
        </Style>

        <!-- 위험 버튼 스타일 -->
        <Style x:Key="DangerButton2" TargetType="Button" BasedOn="{StaticResource ModernButton2}">
            <Setter Property="Background" Value="#D13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C50E13"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A50E13"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 위험 버튼 스타일 -->
        <Style x:Key="DangerButton3" TargetType="Button" BasedOn="{StaticResource ModernButton3}">
            <Setter Property="Background" Value="#D13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C50E13"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A50E13"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 위험 버튼 스타일 -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#D13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C50E13"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A50E13"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 성공 버튼 스타일 -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#107C10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0F6B0F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D5B0D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 모던 텍스트박스 스타일 -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3,3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 모던 콤보박스 스타일 -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8,32,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- 카드 스타일 -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15, 5, 15, 5"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#15000000" BlurRadius="12" ShadowDepth="4" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 헤더 텍스트 스타일 -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C2C2C"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>

        <!-- 라벨 텍스트 스타일 -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#5C5C5C"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- 상태 텍스트 스타일 -->
        <Style x:Key="StatusText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#FFF4CE"/>
            <Setter Property="Foreground" Value="#9D6C00"/>
        </Style>

        <!-- 최적화된 탭 컨트롤 스타일 -->
        <Style TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0" Panel.ZIndex="1" 
                                      IsItemsHost="True" 
                                      Margin="0,0,0,0"
                                      Background="Transparent"/>
                            <Border Grid.Row="1" 
                                    Background="White" 
                                    BorderBrush="#E1E1E1" 
                                    BorderThickness="1,0,1,1"
                                    CornerRadius="0,0,4,4"
                                    Margin="2,0,2,0">
                                <ContentPresenter ContentSource="SelectedContent" 
                                                  Margin="0" 
                                                  x:Name="PART_SelectedContentHost"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 최적화된 탭 아이템 스타일 -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder" 
                                Background="#F8F9FA" 
                                BorderBrush="#E1E1E1" 
                                BorderThickness="1,1,1,0" 
                                CornerRadius="4,4,0,0" 
                                Margin="2,0,2,0" 
                                Padding="12,6">
                            <ContentPresenter ContentSource="Header" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="White"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="1,2,1,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- 최적화된 리스트박스 스타일 -->
        <Style TargetType="ListBox">
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 최적화된 데이터그리드 스타일 -->
        <Style TargetType="DataGrid">
            <Setter Property="EnableRowVirtualization" Value="True"/>
            <Setter Property="EnableColumnVirtualization" Value="True"/>
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 서버 제어 카드 -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Margin="16, 10, 16, 0">
            <StackPanel Orientation="Horizontal" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Server" Width="24" Height="24" Foreground="Black" Margin="0,0,8,0"/>
                    <TextBlock Text="서버 설정" Style="{StaticResource HeaderText}" VerticalAlignment="Center" Margin="0,0,16,0"/>
                </StackPanel>
                <TextBlock Text="IP 주소:" Style="{StaticResource LabelText}"/>
                <TextBox x:Name="IpTextBox" Width="120" Text="127.0.0.1" 
                             Style="{StaticResource ModernTextBox}" Margin="0,0,16,0"/>

                <TextBlock Text="포트:" Style="{StaticResource LabelText}"/>
                <TextBox x:Name="PortTextBox" Width="60" Text="502" 
                             Style="{StaticResource ModernTextBox}" Margin="0,0,16,0"/>

                <Button Content="▶ 시작" Click="StartServer_Click" 
                            Style="{StaticResource SuccessButton}"/>
                <Button Content="⏹ 중지" Click="StopServer_Click" 
                            Style="{StaticResource DangerButton}"/>

                <Border Background="#FFF4CE" CornerRadius="4" Padding="12,6" Margin="0,7,0,7">
                    <TextBlock x:Name="ServerStatusText" Text="서버 중지됨" 
                                   Foreground="#9D6C00" FontWeight="Bold" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- 장치 제어 카드 -->
        <Border Grid.Row="1" Margin="16, 10, 16, 0" Style="{StaticResource Card}">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="Atom" Width="24" Height="24" Foreground="Black" Margin="0,0,8,0"/>
                    <TextBlock Text="장치 관리" Style="{StaticResource HeaderText}" VerticalAlignment="Center" Margin="0,0,16,0"/>
                </StackPanel>
                <TextBlock Text="장치 ID:" Style="{StaticResource LabelText}"/>
                <TextBox x:Name="UnitIdTextBox" Text="0" Width="50" Style="{StaticResource ModernTextBox}" Margin="0,0,16,0"/>

                <TextBlock Text="시작 주소:" Style="{StaticResource LabelText}"/>
                <TextBox x:Name="StartAddressTextBox" Width="60" Text="0" 
                 Style="{StaticResource ModernTextBox}" Margin="0,0,16,0"/>

                <TextBlock Text="레지스터 수:" Style="{StaticResource LabelText}"/>
                <TextBox x:Name="AddressCountTextBox" Width="50" Text="10" 
                             Style="{StaticResource ModernTextBox}" Margin="0,0,16,0"/>

                <TextBlock Text="레지스터 타입:" Style="{StaticResource LabelText}"/>
                <ComboBox x:Name="RegisterTypeComboBox" Width="200" 
                              Style="{StaticResource ModernComboBox}" Margin="0,0,16,0">
                    <ComboBoxItem Content="01 - Coil (R/W)" IsSelected="True"/>
                    <ComboBoxItem Content="02 - Input Status (R)"/>
                    <ComboBoxItem Content="03 - Holding Register (R/W)" IsSelected="True"/>
                    <ComboBoxItem Content="04 - Input Register (R)"/>
                </ComboBox>

                <Button Content="➕ 장치 추가" Click="AddDevice_Click" 
                            Style="{StaticResource ModernButton2}"/>
            </StackPanel>
        </Border>

        <!-- 통합 데이터/로그 영역 -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="16,8,16,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 헤더 및 토글 버튼 -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 왼쪽: 헤더 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <fa:IconImage x:Name="HeaderIcon" Icon="Database" Width="24" Height="24" Foreground="Black" Margin="0,0,8,0"/>
                        <TextBlock x:Name="HeaderText" Text="장치 데이터" Style="{StaticResource HeaderText}" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        
                        <!-- 장치 삭제 버튼 (장치 데이터 모드에서만 표시) -->
                        <Button x:Name="DeleteDeviceButton" Content="🗑️ 장치 삭제" Click="DeleteDevice_Click" 
                                Style="{StaticResource DangerButton3}" Visibility="Visible"/>
                    </StackPanel>
                    
                    <!-- 오른쪽: 토글 버튼 그룹 -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="DeviceDataButton" Content="📊 장치 데이터" 
                                Style="{StaticResource ActiveToggleButton}" 
                                Click="ShowDeviceData_Click" 
                                Margin="0,0,2,0"/>
                        <Button x:Name="LogButton" Content="📋 로그" 
                                Style="{StaticResource ToggleButton}" 
                                Click="ShowLog_Click" 
                                Margin="2,0,0,0"/>
                    </StackPanel>
                </Grid>
                
                <!-- 콘텐츠 영역 -->
                <Grid Grid.Row="1">
                    <!-- 장치 데이터 TabControl - 최적화된 버전 -->
                    <TabControl x:Name="DeviceTabControl" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Padding="0" 
                                Margin="0" 
                                Visibility="Visible">
                    </TabControl>
                    
                    <!-- 로그 ListBox -->
                    <Border x:Name="LogContainer" Background="#FAFBFC" CornerRadius="4" 
                            BorderBrush="#E1E1E1" BorderThickness="1" Visibility="Collapsed">
                        <ListBox x:Name="LogBox" 
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Padding="12"
                                 FontFamily="Consolas, Monaco, monospace"
                                 FontSize="12"
                                 VirtualizingStackPanel.IsVirtualizing="True"
                                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                                 ScrollViewer.CanContentScroll="True">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>