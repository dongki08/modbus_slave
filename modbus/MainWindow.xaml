<Window x:Class="modbus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modbus TCP Slave Simulator"
        Width="1280" Height="800"
        WindowStyle="None" Background="#1E1E1E" AllowsTransparency="False">

    <Window.Resources>
        <!-- 색상/브러시 -->
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#B3FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#242426"/>
        <SolidColorBrush x:Key="SurfaceAltBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#16A085"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#E67E22"/>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="16" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
        <DropShadowEffect x:Key="SoftShadow" BlurRadius="10" ShadowDepth="0" Opacity="0.35" Color="#000000"/>

        <!-- 버튼 -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0B84EE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0A6EC0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#404040"/>
                                <Setter Property="Foreground" Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="GhostButton" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#333333"/>
        </Style>

        <!-- 토글 버튼(상단 전환용) -->
        <Style TargetType="ToggleButton" x:Key="ToggleButton2">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ToggleButton" x:Key="ActiveToggleButton" BasedOn="{StaticResource ToggleButton2}">
            <Setter Property="Background" Value="#0078D4"/>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.6" Color="#0078D4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- 커스텀 타이틀바 -->
        <Grid Background="{StaticResource SurfaceBrush}" Height="46" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                <TextBlock Text="Modbus TCP Slave" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                <Border Margin="12,0,0,0" Padding="8,2" CornerRadius="6">
                    <TextBlock x:Name="ServerStatusText" Text="🔴 서버 중지됨" Foreground="{StaticResource TextBrush}" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                <Button Style="{StaticResource GhostButton}" Width="36" Height="28" Content="—" Click="Minimize_Click"/>
                <Button Style="{StaticResource GhostButton}" Width="36" Height="28" Content="□" Click="Maximize_Click"/>
                <Button Style="{StaticResource GhostButton}" Width="36" Height="28" Content="✕" Click="Close_Click"/>
            </StackPanel>
        </Grid>

        <!-- 본문 -->
        <Grid Margin="0,46,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측: 제어/설정 -->
            <Border Background="{StaticResource SurfaceAltBrush}" Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" >
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16" >

                        <!-- 서버 설정 -->
                        <TextBlock Text="서버 설정" Foreground="{StaticResource TextBrush}" FontWeight="Bold" FontSize="14" Margin="0,6,0,8"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="IP" Foreground="{StaticResource SubTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="IpTextBox" Grid.Column="1" Text="0.0.0.0"/>
                        </Grid>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Port" Foreground="{StaticResource SubTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="PortTextBox" Grid.Column="1" Text="502"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Button x:Name="StartServerButton" Style="{StaticResource PrimaryButton}" Content="서버 시작" Click="StartServer_Click"/>
                            <Button x:Name="StopServerButton" Style="{StaticResource GhostButton}" Content="서버 중지" Click="StopServer_Click" />
                        </StackPanel>

                        <Separator Margin="0,8,0,8" Background="{StaticResource BorderBrush}" Height="1"/>

                        <!-- 장치 추가 -->
                        <TextBlock Text="장치 추가 (4타입 자동 생성)" Foreground="{StaticResource TextBrush}" FontWeight="Bold" FontSize="14" Margin="0,6,0,8"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Unit ID" Foreground="{StaticResource SubTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="UnitIdTextBox" Grid.Column="1" Text="1"/>
                        </Grid>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="시작 주소(오프셋)" Foreground="{StaticResource SubTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="StartAddressTextBox" Grid.Column="1" Text="0" />
                        </Grid>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="개수" Foreground="{StaticResource SubTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="AddressCountTextBox" Grid.Column="1" Text="10"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="AddDeviceButton" Style="{StaticResource PrimaryButton}" Content="장치 추가" Click="AddDevice_Click"/>
                            <Button x:Name="DeleteDeviceButton" Style="{StaticResource GhostButton}" Content="선택 장치 삭제" Click="DeleteDevice_Click"/>
                        </StackPanel>

                        <Separator Margin="0,12,0,8" Background="{StaticResource BorderBrush}" Height="1"/>

                        <!-- 보기 전환 -->
                        <TextBlock Text="보기" Foreground="{StaticResource TextBrush}" FontWeight="Bold" FontSize="14" Margin="0,6,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton x:Name="DeviceDataButton" Content="장치 데이터" Style="{StaticResource ActiveToggleButton}" Click="ShowDeviceData_Click" IsChecked="True"/>
                            <ToggleButton x:Name="LogButton" Content="시스템 로그" Style="{StaticResource ToggleButton2}" Click="ShowLog_Click"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 우측: 콘텐츠 -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <!-- 장치 탭들 -->
                <TabControl x:Name="DeviceTabControl" Margin="16" Visibility="Visible" Background="Transparent" BorderThickness="0">
                    <!-- 코드에서 동적 생성 -->
                </TabControl>

                <!-- 로그 -->
                <Border x:Name="LogContainer" Margin="16" Background="{StaticResource SurfaceAltBrush}" CornerRadius="10" Padding="12" Visibility="Collapsed" Effect="{StaticResource CardShadow}">
                    <ListBox x:Name="LogBox" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextBrush}"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
